
@using Arvefordeleren.Models
@using Arvefordeleren.Models.Repositories

<div>
    <form>
        <label for="name">Name:</label>
        <input type="text" id="name" @bind="Name" />
        <br />
        <label for="address">Address:</label>
        <input type="text" id="address" @bind="Address" />
        <br />
        <button type="button" @onclick="AddArving">Add</button>
    </form>
    <h2>Added Arvinger:</h2>
    <ul>
        @foreach (var arving in ArvingerRepository.GetArvinger())
        {
            <li>@arving.Name - @arving.Address</li>
        }
    </ul>
</div>

@code {
    private string Name { get; set; }
    private string Address { get; set; }

    private void AddArving()
    {
        ArvingerRepository.AddArving(new Arving { Name = Name, Address = Address });
        Name = string.Empty;
        Address = string.Empty;
    }
}